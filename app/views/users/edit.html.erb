<div class="container">
<div class="row">
<h2>User info</h2>
<%= form_for(@user) do |f| %>
    <h4>Name</h4>
    <%= f.text_field :name %>

    <h4>Image</h4>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
    <%= f.attachment_field :profile_image, placeholder: "画像" %>

    <h4>Introduction</h4>
    <%= f.text_area :introduction %>
 
    <%= f.submit 'Update User' %>
 
<% end %>
</div>
</div>