<div class="container">
<div class="row">
<h2>User info</h2>
<%= form_for(@user) do |f| %>

    <% if @user.errors.any? %>
        <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
    <% end %>
    <div class="form-group">
        <h4>Name</h4>
        <%= f.text_field :name %>
    </div>
    <div class="form-group">
        <h4>Image</h4>
        <%= attachment_image_tag @user, :profile_image, :fill, 120, 120, fallback: "no_image.jpg", size:'120x120' %>
        <%= f.attachment_field :profile_image, placeholder: "画像" %>
    </div>
    <div class="form-group">
        <h4>Introduction</h4>
        <%= f.text_area :introduction %>
    </div>
    
    <%= f.submit 'Update User' %>
 
<% end %>
</div>
</div>