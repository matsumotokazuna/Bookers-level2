<div class="col-xs-3">
<h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
    <table class="table">
    <tr>
        <td>name</td>
        <td><%= user.name %></td>
    </tr>
    <tr>
        <td>introduction</td>
        <td><%= user.introduction %></td>
    </tr>
    </table>
    <% if user.id == current_user.id %>
        <%= link_to "", edit_user_path(user.id), class: 'btn btn-default btn-block glyphicon glyphicon-wrench' %>
    <% end %>

<h2>New book</h2>
    <%= form_for(book, url:books_path(book.id)) do |f| %>
        <% if book.errors.any? %>
            <h2><%= book.errors.count %>errors prohibited this obj from being saved:</h2>
            <ul>
            <% book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        <% end %>
        <div class="form-group">
            <h4>Title</h4>
            <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
            <h4>Opinion</h4>
            <%= f.text_area :body, class: 'form-control' %>
        </div>

        <%= f.submit 'Create Book', class: 'btn btn-primary btn-block' %>
    <% end %>
</div>