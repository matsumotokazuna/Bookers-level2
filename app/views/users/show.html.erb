<div class="container">
<div class="row">
<div class= "col-lg-4">

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
    <table>
    <tr>
        <td>name</td>
        <td><%= @user.name %></td>
    </tr>
    <tr>
        <td>introduction</td>
        <td><%= @user.introduction %></td>
    </tr>
    </table>
    <% if @user.id == current_user.id %>
        <%= link_to "", edit_user_path, class: 'btn btn-default glyphicon glyphicon-wrench' %>
    <% end %>

<h2>New book</h2>
    <%= form_for(@book, url:books_path(@book.id)) do |f| %>
        <% if @book.errors.any? %>
            <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
            <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        <% end %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>
    <% end %>
</div>

<div class= "col-lg-8">
<h2>Books</h2>
    <table>
    <tr>
        <td></td>
        <td>Title</td>
        <td>Opinion</td>
    <tr>
    <% @books.each do |book| %>
        <% if book.user_id == @user.id %>
        <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50' %></td>
            <td><%= link_to "#{book.title}", book_path(book.id) %></td>
            <td><%= book.body%></td>
        </tr>
        <% end %>
     <% end %>
    </table>
</div>
</div>
</div>