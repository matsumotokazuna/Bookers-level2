<div class="container">
<div class="row">
<div class= "col-lg-4">
<h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
    <table>
    <tr>
        <td>name</td>
        <td><%= @user.name %></td>
    </tr>
    <tr>
        <td>introduction</td>
        <td><%= @user.introduction %></td>
    </tr>
    </table>
    <% if @user.id == current_user.id %>
        <%= button_to "setthing", {controller: 'users', action: 'edit'}, {method: :get} %>
        <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
    <% end %>

<h2>New book</h2>
    <%= form_for(@book, url:books_path(@book.id)) do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>
    <% end %>
</div>

<div class= "col-lg-8">
<h2>Books</h2>
    <table>
    <tr>
        <td></td>
        <td>Title</td>
        <td>Opinion</td>
    <tr>
    <% @books.each do |book| %>
        <% if book.user_id == @user.id %>
        <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50' %></td>
            <td><%= book.title %></td>
            <td><%= book.body%></td>
        </tr>
        <% end %>
     <% end %>
    </table>
</div>
</div>
</div>