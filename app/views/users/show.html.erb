<div class="container">
<div class="row">

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<%= render 'users/sidebar', user: @user, book:@book %>

<div class= "col-xs-9">
<h2>Books</h2>
    <table class="table">
    <tr>
        <td></td>
        <td>Title</td>
        <td>Opinion</td>
    <tr>
    <% @books.each do |book| %>
        <% if book.user_id == @user.id %>
        <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50' %></td>
            <td><%= link_to "#{book.title}", book_path(book.id) %></td>
            <td><%= book.body%></td>
        </tr>
        <% end %>
     <% end %>
    </table>
</div>
</div>
</div>