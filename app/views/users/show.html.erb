<div class="container">
<div class="row">
<div class= "col-lg-4">
<h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
    <h4>name<h4>
    <%= @user.name %>

    <h4>introduction</h4>
    <%= @user.introduction %>

<h2>New book</h2>
    <%= form_for(@book, url:books_path) do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>
    <% end %>
</div>

<div class= "col-lg-8">
<h2>Books</h2>
    <table>
    <tr>
        <td>Title</td>
        <td>Opinion</td>
    <tr>
    <% @books.each do |book| %>
    <tr>
        <td><%= book.title %></td>
        <td><%= book.body%></td>
    </tr>
     <% end %>
    </table>
</div>
</div>
</div>