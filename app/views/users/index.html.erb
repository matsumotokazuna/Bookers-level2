<div class="container">
<div class="row">

<%= render 'users/sidebar', user: @user, book:@book %>

<div class= "col-xs-9">
<h2>Users</h2>
    <table class="table">
    <tr>
        <td>image</td>
        <td>name</td>
        <td></td>
    </tr>
    <% @users.each do |user| %>
    <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50' %></td>
        <td><%= user.name %></td>
        <td><%=link_to "Show",user_path(user.id) %></td>
    </tr>
    <% end %>
    </table>
</div>
</div>
</div>