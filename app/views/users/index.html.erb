<div class="container">
<div class="row">

<div class="col-xs-3">
<h2>User info</h2>
    <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
    <table class="table">
    <tr>
        <td>name</td>
        <td><%= current_user.name %></td>
    </tr>
    <tr>
        <td>introduction</td>
        <td><%= current_user.introduction %></td>
    </tr>
    </table>

<h2>New book</h2>
    <%= form_for(@book, url:books_path) do |f| %>
        <% if @book.errors.any? %>
        <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
        <% end %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>
    <% end %>
</div>

<div class= "col-xs-9">
<h2>Users</h2>
    <table class="table">
    <tr>
        <td>image</td>
        <td>name</td>
        <td></td>
    </tr>
    <% @users.each do |user| %>
    <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50' %></td>
        <td><%= user.name %></td>
        <td><%=link_to "Show",user_path(user.id) %></td>
    </tr>
    <% end %>
    </table>
</div>
</div>
</div>