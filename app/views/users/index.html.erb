<div class="container">
<div class="row">
<div class= "col-lg-4">
<h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
    <table>
    <tr>
        <td>name</td>
        <td><%= @user.name %></td>
    </tr>
    <tr>
        <td>introduction</td>
        <td><%= @user.introduction %></td>
    </tr>
    </table>

<h2>New book</h2>
    <%= form_for(@book, url:books_path) do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>
    <% end %>
</div>

<div class= "col-lg-8">
<h2>Users</h2>
    <table>
    <tr>
        <td>image</td>
        <td>name</td>
        <td></td>
    </tr>
    <% @users.each do |user| %>
    <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50' %></td>
        <td><%= user.name %></td>
        <td><%=link_to "Show",user_path(user.id) %></td>
    </tr>
    <% end %>
    </table>
</div>
</div>
</div>