<div class="container">
<div class="row">

<%= render 'users/sidebar', user: @user, book:@book %>

<div class= "col-xs-9">
<h2>Books</h2>
    <table class="table">
    <tr>
        <td></td>
        <td>Title</td>
        <td>Opinion</td>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td>
            <%= link_to user_path(book.user_id) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50' %>
            <% end %>
        </td>
        <td><%=link_to "#{book.title}",book_path(book.id) %></td>
        <td><%= book.body %></td>
    </tr>
    <% end %>
    </table>
</div>
</div>
</div>