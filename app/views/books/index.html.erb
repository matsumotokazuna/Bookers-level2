<div class="container">
<div class="row">
<div class= "col-lg-4">
<% 
=begin
%>
<h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
    <h4>name<h4>
    <%= @user.name %>

    <h4>introduction</h4>
    <%= @user.introduction %>
<%
=end
%>

<h2>New book</h2>
    <%= form_for(@book, url:books_path) do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>
    <% end %>
</div>

<div class= "col-lg-8">
<h2>Books</h2>
    <table>
    <tr>
        <td></td>
        <td>Title</td>
        <td>Opinion</td>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td></td>
        <td><%=link_to "#{book.title}",book_path(book.id) %></td>
        <td><%= book.body %></td>
    </tr>
    <% end %>
    </table>
</div>
</div>
</div>