<div class="container">
<div class="row">

<div class="col-xs-3">
<h2>User info</h2>
    <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
    <table class="table">
    <tr>
        <td>name</td>
        <td><%= current_user.name %></td>
    </tr>
    <tr>
        <td>introduction</td>
        <td><%= current_user.introduction %></td>
    </tr>
    </table>
        <%= link_to "", edit_user_path(current_user.id), class: 'btn btn-default btn-block glyphicon glyphicon-wrench' %>
<h2>New book</h2>
    <%= form_for(@book, url:books_path) do |f| %>
        <% if @book.errors.any? %>
        <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
    <% end %>
    <div class="form-group">
        <h4>Title</h4>
        <%= f.text_field :title,  class: 'form-control' %>
    </div>
    <div class="form-group">
        <h4>Opinion</h4>
        <%= f.text_area :body,  class: 'form-control' %>
    </div>
        <%= f.submit 'Create Book', class: 'btn btn-primary btn-block' %>
    <% end %>
</div>

<div class= "col-xs-9">
<h2>Books</h2>
    <table class="table">
    <tr>
        <td></td>
        <td>Title</td>
        <td>Opinion</td>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td>
            <%= link_to user_path(book.user_id) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50' %>
            <% end %>
        </td>
        <td><%=link_to "#{book.title}",book_path(book.id) %></td>
        <td><%= book.body %></td>
    </tr>
    <% end %>
    </table>
</div>
</div>
</div>