<div class="container">
<div class="row">
<div class= "col-lg-4">
<% 
=begin
%>
<h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
    <h4>name<h4>
    <%= @user.name %>

    <h4>introduction</h4>
    <%= @user.introduction %>
<%
=end
%>

<h2>New book</h2>
    <%= form_for(@book, url:books_path) do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>
    <% end %>
</div>

<div class= "col-lg-8">
<h2>Book detail</h2>
    <table>
    <tr>
        <td></td>
        <td><%= link_to "#{@post_book.title}", book_path(@post_book.id)  %></td>
        <td><%= @post_book.body %></td>
        <td>Edit</td>
        <td>Destroy</td>
    </tr>
    </table>
</div>
</div>
</div>