<div class="container">
<div class="row">
<div class= "col-lg-4">

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h2>User info</h2>
    <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
    <table>
    <tr>
        <td>name</td>
        <td><%= current_user.name %></td>
    </tr>
    <tr>
        <td>introduction</td>
        <td><%= current_user.introduction %></td>
    </tr>
    </table>

<h2>New book</h2>
    <%= form_for(@book) do |f| %> 
    <% if @book.errors.any? %>
        <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
    <% end %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>
    <% end %>
</div>

<div class= "col-lg-8">
<h2>Book detail</h2>
    <table>
    <tr>
        <td>
            <%= attachment_image_tag @post_book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50' %>
            <%= link_to "#{@post_book.user.name}", user_path(@post_book.user.id) %>
        </td>
        <td><%= link_to "#{@post_book.title}", book_path(@post_book.id)  %></td>
        <td><%= @post_book.body %></td>
        <% if @post_book.user_id == current_user.id %>
        <td><%= link_to 'Edit', edit_book_path(@post_book.id) %></td>
        <td><%= link_to 'Destroy', book_path(@post_book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        <% end %>
    </tr>
    </table>
</div>
</div>
</div>